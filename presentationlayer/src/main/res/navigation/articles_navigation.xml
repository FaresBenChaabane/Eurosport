<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/articles_navigation"
    app:startDestination="@id/articlesListingFragment">

    <fragment
        android:id="@+id/articlesListingFragment"
        android:name="fr.benchaabane.presentationlayer.ui.articles.listing.ArticlesListingFragment"
        android:label="ArticlesListingFragment"
        tools:layout="@layout/fragment_articles_listing">
        <action
            android:id="@+id/action_articlesListingFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment" />
        <action
            android:id="@+id/action_articlesListingFragment_to_videoStreamingFragment"
            app:destination="@id/videoStreamingFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="fr.benchaabane.presentationlayer.ui.articles.details.StoryDetailsFragment"
        android:label="ArticleDetailsFragment"
        tools:layout="@layout/fragment_article_details"/>
    <fragment
        android:id="@+id/videoStreamingFragment"
        android:name="fr.benchaabane.presentationlayer.ui.articles.streaming.VideoStreamingFragment"
        android:label="VideoStreamingFragment"
        tools:layout="@layout/fragment_video_streaming"/>
</navigation>